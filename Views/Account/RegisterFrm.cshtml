@model PGproject.Models.TAcctMst
@{
    ViewBag.Title = "RegisterFrm";
}
<style type="text/css">
    .registerConten {
        font-family: Raleway, sans-serif;
    }

    .control-label {
        text-align: right;
        line-height: 40px;
        margin-bottom: 0px;
    }

    .login-register {
        font-size: 11px;
        text-align: center;
    }

    body {
        font-family: Arial;
        font-size: 10pt;
        background-color: #f5f8fa;
    }

    .error {
        text-align: left;
        line-height: 40px;
        color: red;
    }
</style>

<hr />
<h2>회원가입</h2>
<hr />
<div class="registerConten">
    <div>
        @using (Html.BeginForm("RegisterFrm", "Account", FormMethod.Post))
        {
            <h3 style="color:red;">@ViewBag.Message</h3>
            <div class="form-group">
                <i class="fas fa-check-square"></i> 중복된 회원 경우 회원가입 안됨 => 버튼추가예정
                @Html.EditorFor(x => x.UserID, new { htmlAttributes = new { @class = "form-control", placeholder = "ID (필수) " } })
                @Html.ValidationMessageFor(x => x.UserID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <i class="fas fa-check-square"></i> 8~20 자리 대문자,특수문자 조합으로 입력하세요.
                @Html.EditorFor(x => x.UserPwd, new { htmlAttributes = new { @class = "form-control", placeholder = "비밀번호 (필수) " } })
                @Html.ValidationMessageFor(x => x.UserPwd, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "비밀번호 확인 (필수)" } })
                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "이름 (필수)" } })
                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                Male : @Html.RadioButtonFor(x => x.GenderCode, 1)
                Female : @Html.RadioButtonFor(x => x.GenderCode, 2)
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.EmailAddr, new { htmlAttributes = new { @class = "form-control", placeholder = "이메일 (필수)" } })
                @Html.ValidationMessageFor(x => x.EmailAddr, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.BirthDay, new { htmlAttributes = new { @class = "form-control", placeholder = "생년월일 ex) 1900-11-13" } })
                @Html.ValidationMessageFor(x => x.BirthDay, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="Register" class="btn btn-primary" />
        }
    </div>
</div>


